{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy of men vs women in the year 2019",
  "width": 500,
  "height": 381,
  "data": {
    "url": "https://raw.githubusercontent.com/JengsHub/FIT3179/main/data/LE_men_women_2019.csv"
  },
  "params": [
     {
        "name": "Population_Above",
        "value": 0,
        "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
      "labels":[
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
      "name": "Continent Selection: "
        }
    }    
  ],
  "layer": [
    {
      "transform": [
        {"filter": "datum.Total_population > Population_Above"},
        {"filter": "Continent_selection == null || datum.Continent ==  Continent_selection"}
      ],
      "selection": {
        "continent_highlight" : {
        "type" : "multi",
        "fields": ["Continent"],
        "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Male_expectancy",
          "type": "quantitative",
          "scale": {"domain": [50, 90]},
          "axis": {
            "grid": true,
            "values": [50, 55, 60, 65, 70, 75, 80, 85, 90]
          },
          "title": "Life Expectancy of Men"
        },
        "y": {
          "field": "Women_expectancy",
          "type": "quantitative",
          "scale": {"domain": [50, 90]},
          "title": "Life Expectancy of Women"
        },
        "size": {
          "field": "Total_population",
          "type": "quantitative",
          "legend": null,
          "scale": {"rangeMax": 5000}
        },
        "color": {"field": "Continent", "type": "nominal"},
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Total_population",
            "type": "quantitative",
            "title": "Population"
          },
          {
            "field": "Male_expectancy",
            "type": "quantitative",
            "title": "Life Expectancy of Males ",
            "format": ".2f"
          },
          {
            "field": "Women_expectancy",
            "type": "quantitative",
            "title": "Life Expectancy of Females",
            "format": ".2f"
          }
        ],
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
  }
      }
    },
    {
      "data": {
        "values":[
          {"x": 50, "y": 50}, 
          {"x": 90, "y": 90}
        ]
      },
      "mark": {"type": "line", "color": "firebrick", "opacity": 0.2},
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"}
      }
    }
  ]
}
